# EditorConfig is awesome: https://EditorConfig.org

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.toml]
indent_size = 2

[*.typ]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

